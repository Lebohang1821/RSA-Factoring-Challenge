#!/usr/bin/python3

import sys
import time

def factorize(num):
    '''
    Factorize a number into two smaller factors.

    Args:
        num (int): The input integer to factorize.

    Returns:
        tuple: A tuple of two factors if the number is not a prime, otherwise None.
    '''
    for i in range(2, int(num ** 0.5) + 1):
        if num % i == 0:
            return (i, num // i)
    return None

if __name__ == "__main__":
    if len(sys.argv) != 2:
        print("Usage: factors <file>")
        sys.exit(1)

    input_file = sys.argv[1]

    try:
        with open(input_file, 'r') as f:
            lines = f.read().splitlines()
    except FileNotFoundError:
        print("File not found")
        sys.exit(1)

    start_time = time.time()

    for line in lines:
        # Check for empty or whitespace-only lines
        if not line.strip():
            continue

        num = int(line.strip())
        factors = factorize(num)
        if factors:
            print(f"{num}={factors[0]}*{factors[1]}")

        # Check if the elapsed time exceeds 5 seconds
        if time.time() - start_time > 5:
            print("Time limit exceeded")
            sys.exit(1)
